<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sqlPad="clr-namespace:SqlPad;assembly=SqlPad">

	<sqlPad:DateTimeLabelConverter x:Key="DateTimeConverter" />
	<sqlPad:BooleanLabelConverter x:Key="BooleanConverter" />
	<sqlPad:PrettyPrintIntegerConverter x:Key="PrettyPrintIntegerConverter" />
	<sqlPad:DataSpaceConverter x:Key="DataSpaceConverter" />
	<sqlPad:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter" />
	<sqlPad:StringConverter x:Key="StringConverter" />
	<sqlPad:VisibilityCollapseIfZeroConverter x:Key="VisibilityCollapseIfZeroConverter" />
	<sqlPad:PrettyPrintIntegerConverter x:Key="PrettyPrintNumericConverter" />
	<sqlPad:RatioConverter x:Key="RatioConverter" />
	<sqlPad:TimeSpanConverter x:Key="TimeSpanConverter" />

	<Style x:Key="TextBoxBackgroundLessReadOnly">
		<Setter Property="TextBoxBase.IsReadOnly" Value="True" />
		<Setter Property="TextBoxBase.IsReadOnlyCaretVisible" Value="True" />
		<Setter Property="TextBoxBase.Background" Value="Transparent" />
		<Setter Property="TextBoxBase.BorderThickness" Value="0" />
		<Setter Property="TextBoxBase.Padding" Value="-2,0,0,0" />
	</Style>
</ResourceDictionary>
